<!DOCTYPE apt:template SYSTEM "policytemplate.dtd">
<apt:template apt:name="viewViewPrefs">
	<resImport apt:packagePath="org.gnome.evolution.apoc.policies.resource.evolution_policies"/>
	<category apt:name="Evolution1.4" apt:resId="EVO.evo1.4">
		<inlineHelp apt:resId="EVO.cat_evolution_help"/>
		<category apt:name="View" apt:resId="EVO.view">
			<inlineHelp apt:resId="EVO.cat_view_help"/>
			<page apt:name="ViewPrefs" apt:resId="EVO.view.prefs">
				<inlineHelp apt:resId="EVO.view.prefs_help"/>
				<section apt:name="FolderBar" apt:resId="EVO.view.fbar">
					<property apt:dataPath="org.gnome.apps.evolution/shell/view_defaults/show_folder_bar" apt:name="ShowFolderBar" apt:resId="EVO.view.showfbar" apt:visualType="checkBox" oor:nillable="true" oor:type="xs:boolean">
						<value>true</value>
					</property>
					<property apt:dataPath="org.gnome.apps.evolution/shell/view_defaults/folder_bar/width" apt:name="FolderBarWidth" apt:resId="EVO.view.fbar_width" oor:nillable="true" oor:type="xs:int">
						<value>200</value>
					</property>
				</section>
				<section apt:name="ShortcutBar" apt:resId="EVO.view.scbar">
					<property apt:dataPath="org.gnome.apps.evolution/shell/view_defaults/show_shortcut_bar" apt:name="ShowSCBar" apt:resId="EVO.view.show_scbar" apt:visualType="checkBox" oor:nillable="true" oor:type="xs:boolean">
						<value>false</value>
					</property>
					<property apt:dataPath="org.gnome.apps.evolution/shell/view_defaults/shortcut_bar/width" apt:name="SCBarWidth" apt:resId="EVO.view.scbar_width" oor:nillable="true" oor:type="xs:int">
						<value>100</value>
					</property>
				</section>
			</page>
		</category>
	</category>
</apt:template>
